{
  "name": "yapi2ts",
  "displayName": "YAPI 转 TypeScript",
  "description": "将YAPI接口定义转换为TypeScript类型定义",
  "version": "1.0.0",
  "publisher": "vscode-plugin",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:yapi2ts.generateTypes",
    "onCommand:yapi2ts.setToken"
  ],
  "main": "dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "yapi2ts.generateTypes",
        "title": "YAPI 转 TypeScript: 生成接口定义"
      },
      {
        "command": "yapi2ts.setToken",
        "title": "YAPI 转 TypeScript: 设置项目Token"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "yapi2ts-view",
          "title": "YAPI 转 TypeScript",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "yapi2ts-view": [
        {
          "type": "webview",
          "id": "yapi2ts.webview",
          "name": "接口选择器"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build:all",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "build": "vite build",
    "build:webview": "vite build --config vite.config.webview.ts",
    "build:all": "npm run build && npm run build:webview",
    "build:extension:watch": "vite build --watch",
    "build:webview:watch": "vite build --config vite.config.webview.ts --watch",
    "dev:webview": "vite dev --config vite.config.webview.ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/node": "^18.0.0",
    "@types/mocha": "^10.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "@vitejs/plugin-vue": "^5.0.4",
    "vite-plugin-esmodule": "^1.4.4"
  },
  "dependencies": {
    "node-fetch": "^3.2.0",
    "@vue/compiler-sfc": "^3.4.21",
    "element-plus": "^2.5.1",
    "vue": "^3.4.21"
  }
}
