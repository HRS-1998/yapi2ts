{
  "name": "yapi2ts",
  "displayName": "YAPI 转 TypeScript",
  "description": "将YAPI接口定义转换为TypeScript类型定义",
  "version": "1.0.0",
  "publisher": "vscode-plugin",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:yapi2ts.generateTypes",
    "onCommand:yapi2ts.setToken"
  ],
  "main": "dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "yapi2ts.generateTypes",
        "title": "YAPI 转 TypeScript: 生成接口定义"
      },
      {
        "command": "yapi2ts.setToken",
        "title": "YAPI 转 TypeScript: 设置项目Token"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "yapi2ts-view",
          "title": "YAPI 转 TypeScript",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "yapi2ts-view": [
        {
          "type": "webview",
          "id": "yapi2ts.webview",
          "name": "接口选择器"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build:all",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:extension": "tsc -p ./",
    "build:webview": "vite build --config vite.webview.config.ts",
    "build:all": "npm run build:extension && npm run build:webview",
    "dev:webview": "vite --config vite.webview.config.ts",
    "package": "vsce package"
  },
  "dependencies": {
    "axios": "^1.3.2",
    "vue": "^3.3.4",
    "element-plus": "^2.3.14"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.46.0",
    "eslint-plugin-vue": "^9.16.1",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^5.0.2",
    "@vscode/test-electron": "^2.2.0",
    "vite": "^4.4.9",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/tsconfig": "^0.4.0",
    "vite-plugin-static-copy": "^0.17.0",
    "@types/lodash-es": "^4.17.7",
    "ts-loader": "^9.3.0",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.0",
    "vite-plugin-dts": "^3.5.3"
  }
}
