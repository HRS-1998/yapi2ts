{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "扩展开发",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/dist/extension.js", "${workspaceFolder}/dist/webview/**/*.js"],
      "preLaunchTask": "npm: build:all",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/dist/**",
        "!**/node_modules/**"
      ],
      "trace": "verbose"
    },
    {
      "name": "扩展调试(监视模式)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/dist/extension.js", "${workspaceFolder}/dist/webview/**/*.js"],
      "preLaunchTask": "vite: watch:extension",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/dist/**",
        "!**/node_modules/**"
      ],
      "trace": "verbose"
    },
    {
      "name": "扩展测试",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/dist/test/suite/index"
      ],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/dist/**",
        "!**/node_modules/**"
      ],
      "trace": "verbose"
    }
  ]
}
